{
  "name": "mkd-automation-chrome-extension",
  "version": "2.0.0",
  "description": "Chrome extension tests for MKD Automation Platform",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:chrome": "jest --testMatch=\"**/chrome_extension/**/*.test.js\"",
    "lint": "eslint chrome-extension/src tests/chrome_extension",
    "lint:fix": "eslint chrome-extension/src tests/chrome_extension --fix"
  },
  "keywords": [
    "automation",
    "chrome-extension", 
    "testing",
    "jest"
  ],
  "author": "MKD Automation Team",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "puppeteer": "^21.1.1",
    "@testing-library/jest-dom": "^6.1.3",
    "eslint": "^8.48.0",
    "eslint-config-standard": "^17.1.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/chrome_extension/setup.js"
    ],
    "testMatch": [
      "**/tests/chrome_extension/**/*.test.js",
      "**/chrome-extension/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "chrome-extension/src/**/*.js",
      "!chrome-extension/src/vendor/**",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage/chrome-extension",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "globals": {
      "chrome": true
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true,
      "webextensions": true
    },
    "extends": [
      "standard"
    ],
    "globals": {
      "chrome": "readonly"
    }
  }
}