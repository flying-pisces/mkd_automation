{
  "manifest_version": 3,
  "name": "MKD Automation for Chrome",
  "version": "2.0.1",
  "description": "MKD Automation for Chrome enables seamless recording and playback of web interactions, bringing the power of desktop automation to your browser.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "nativeMessaging"
  ],
  "commands": {
    "toggle-recording": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Toggle recording state"
    }
  },
  "content_scripts": [],
  "web_accessible_resources": []
}